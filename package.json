{
	"name": "@anephenix/mcg",
	"version": "0.0.17",
	"description": "Model Component Generator for Objection.js",
	"main": "index.js",
	"bin": "./bin/mcg",
	"scripts": {
		"cover": "cross-env NODE_ENV=test npx nyc --reporter=lcov npm t",
		"lint": "npx eslint .",
		"lint:package": "npx publint",
		"prepare-patch-release": "npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin master && git push --tags",
		"size": "size-limit",
		"test": "cross-env NODE_ENV=test npx mocha --require ts-node/register --extensions ts,tsx test/* --exclude=test/data/* --test",
		"update-changelog": "node scripts/update-changelog.js",
		"prepare": "husky"
	},
	"type": "commonjs",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/anephenix/mcg.git"
	},
	"homepage": "https://github.com/anephenix/mcg",
	"bugs": {
		"url": "https://github.com/anephenix/mcg/issues"
	},
	"keywords": [
		"objection",
		"model",
		"generator"
	],
	"files": [
		"bin",
		"lib",
		"index.js",
		"README.md"
	],
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm t && npm run size"
		}
	},
	"author": "Paul Jensen <paul@anephenix.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/eslint-parser": "^7.25.9",
		"@babel/preset-env": "^7.26.0",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.17.0",
		"@size-limit/file": "^12.0.0",
		"@types/mocha": "^10.0.10",
		"babel-eslint": "^10.1.0",
		"cross-env": "^10.0.0",
		"eslint": "^9.17.0",
		"eslint-plugin-jest": "^29.0.1",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"mocha": "^11.0.1",
		"nyc": "^18.0.0",
		"prettier": "^3.4.2",
		"publint": "^0.3.14",
		"size-limit": "^12.0.0",
		"size-limit-node-esbuild": "^0.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"commander": "^14.0.0",
		"pluralize": "^8.0.0",
		"to-case": "^2.0.0"
	},
	"size-limit": [
		{
			"path": "index.js",
			"limit": "10 kB"
		}
	]
}
